<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#156eb1"
        android:paddingBottom="18dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="18dp">


        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progress"
            android:textColor="@android:color/white"
            android:textSize="14pt" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/walkingProgress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Walking"
            android:textColor="@android:color/black"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:progressDrawable="@drawable/progress_bar1"
            android:progress="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ruuningProgress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Running"
            android:textColor="@android:color/black"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:progress="1"
            android:progressDrawable="@drawable/progress_bar" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sittingProgress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sitting"
            android:textColor="@android:color/black"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:progressDrawable="@drawable/progress_bar3"
            android:progress="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/standingProgress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Standing"
            android:textColor="@android:color/black"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:progress="1"
            android:progressDrawable="@drawable/progress_bar4" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/lyingProgress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lying"
            android:textColor="@android:color/black"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:progressDrawable="@drawable/progress_bar5"
            android:progress="1"/>


    </LinearLayout>


    <WebView
        android:id="@+id/strock_tips"
        android:layout_width="match_parent"
        android:layout_height="140dp" />



    <Button
        android:id="@+id/radarchartButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3498DB"
        android:textColor="@android:color/white"
        android:text="Weekly Progress" />

    <Button
        android:id="@+id/progressButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1ABC9C"
        android:textColor="@android:color/white"
        android:text="Update Progress" />
</LinearLayout>
